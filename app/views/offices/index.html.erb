<div class="container-fluid">
  
  <div class="card shadow p-3 mb-5 bg-white rounded">
    <div class="row mb-0">
      <div class="col-10">
        <h1>Oficinas</h1>
      </div>
      <div class="col-2">
        <%= link_to 'Agregar oficina', new_office_path, class: 'btn btn-success' %>
      </div>
    </div>
    <hr>
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Nombre</th>
            <th>Piso</th>
            <th colspan="2">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @offices.each do |office| %>
            <tr>
              <td><%= link_to office.name.capitalize, office %></td>
              <td><%= link_to office.floor.name.capitalize, office.floor %></td>
              <td>
                <%= link_to 'Editar', edit_office_path(office), class: 'btn btn-primary' %>
                <%= link_to 'Eliminar', office, method: :delete, data: { confirm: 'Estas seguro de eliminar la oficina?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
