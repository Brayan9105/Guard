<%= form_with(model: office, local: true) do |form| %>
  <% if office.errors.any? %>
  <div class="lert alert-danger py-3 px-3 my-3">
    <div id="error_explanation">
      <h2>Los siguientes errores han evitado cumplir la tarea:</h2>

      <ul>
        <% office.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nombre de la oficina' %>
  </div>

  <div class="form-group">
    <%= form.label :floor_id %>
    <%= form.collection_select( :floor_id, Floor.all(), :id, :name, {}, {:class => 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>