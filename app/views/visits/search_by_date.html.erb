<div class="container-fluid"> 
  <h1 class="mb-5">Buscar visita por dia</h1>

  <div class="card shadow p-3 mb-3 bg-white rounded">
    <div class="row mb-3">
        <div class="col-7">
          <label for="">Buscar dia</label>
          <%= form_with(url: visit_per_day_path, method: 'get', remote: true) do |form|%>
          <div class="form-group">
            <div class="row">
              <div class="col-7 mr-0">
                <%= form.date_field :date, class: 'form-control' %>
              </div>
              <div class="col-3 ml-0">
                <%= form.submit 'Buscar', class: 'btn btn-success' %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12" id="visitorSearchVisit">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="row mb-0">
          <div class="col-10">
            <h1>Historial de visitas</h1>
          </div>
          <div class="col-2">
            <%= link_to 'Agregar visita', new_visit_path, class: 'btn btn-success' %>
          </div>
        </div>
        <hr>
        <div class="table-responsive">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Fecha</th>
                <th>Cedula</th>
                <th>Nombre completo</th>
                <th class="center-text">Piso</th>
                <th class="center-text">Oficina</th>
                <th class="center-text">Tem. Entrada</th>
                <th class="center-text">Tem. Salida</th>
                <th class="center-text">H. Entrada</th>
                <th class="center-text">H. Salida</th>
                <th class="center-text">Opciones</th>
      
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>