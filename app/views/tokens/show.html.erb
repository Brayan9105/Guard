<div class="container-fluid">    
  <%= link_to 'Regresar', tokens_path, class: 'btn btn-secondary mb-5' %>
  
  <div class="h1">
    <%= @token.name.capitalize %>
  </div>
  <p class="lead">
    <% if @token.disable? %>
      Estado: <span class="badge badge-danger">Ocupado</span>
    <% else %>
      Estado: <span class="badge badge-success">Disponible</span>
    <% end %>
  </p>
  
  <div class="card mb-3" style="width: 18rem;">
    <% if @visit.visitor.photo.attached? %>
      <%= image_tag(@visit.visitor.photo, class: "card-img-top") %>
    <% else %>
      <img class="card-img-top" src="/cat.jpg" id="shot" style="width: 18rem;">
    <% end %>
  </div>

  <p class="lead">
    <% if @token.disable? %>
      Visitante actual
    <% else %>
      Ultimo visitante en usar la ficha
    <% end %>
  </p>

  <div class="card">
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Oficina</th>
            <th>Cedula</th>
            <th>Nombre completo</th>
            <th class="center-text">Hora de ingreso</th>
            <th class="center-text">Tem. Ingreso</th>
            <th class="center-text">Opciones</th>
          </tr>
        </thead>
          <tr>
            <td><%= @visit.office.name %></td>
            <td><%= @visit.visitor.dni %></td>
            <td><%= "#{@visit.visitor.first_name} #{@visit.visitor.last_name}" %></td>
            <td class="center-text"><%= @visit.created_at.in_time_zone('America/Bogota').strftime("%r") %></td>
            <td class="center-text"><%= @visit.in_temperature %>Â°</td>
            <td class="center-text"><%= link_to 'Ver visita', @visit, class: 'btn btn-info' %></td>
          </tr>
      </table>
    </div>
  </div>
  
</div>  
