
<div class="container-fluid">
  
  <div class="row mb-3">
    <div class="col-10">
      <h1>Eps</h1>
    </div>
    <div class="col-2">
      <%= link_to 'Agregar eps', new_health_path, class: 'btn btn-success' %>
    </div>
  </div>
  
  <div class="card">
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @healths.each do |health| %>
            <tr>
              <td><%= health.name %></td>
              <td><%= health.address %></td>
              <td><%= health.phone %></td>
              <td><%= link_to 'Editar', edit_health_path(health), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>  
    </div>  
  </div>

</div>
