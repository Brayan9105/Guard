
<div class="container-fluid">
  
  <div class="row mb-3">
    <div class="col-10">
      <h1>Arl</h1>
    </div>
    <div class="col-2">
      <%= link_to 'Agregar eps', new_security_path, class: 'btn btn-success' %>
    </div>
  </div>
  
  <div class="card shadow p-3 mb-5 bg-white rounded">
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @securities.each do |security| %>
            <tr>
              <td><%= security.name %></td>
              <td><%= security.address %></td>
              <td><%= security.phone %></td>
              <td><%= link_to 'Editar', edit_security_path(security), class: 'btn btn-primary' %></td>      
            </tr>
          <% end %>
        </tbody>
      </table>  
    </div>  
  </div>

</div>
