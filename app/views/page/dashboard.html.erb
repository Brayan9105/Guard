<div class="container-fluid">
  <h1>Tablero</h1>
  <div class="card shadow p-3 mb-5 bg-white rounded">
    <%= line_chart Visit.group_by_day(:created_at, last: 7).count,
      title: 'Cantidad de visitas por dia',  
      colors: ['orange'],
      xtitle: "Dias", 
      ytitle: "visitas"
          
    %>
  </div>
  <div class="row">
    <div id="div1"></div>
  </div>

  <hr class="my-5">
  <div class="row">
    <div class="col-6">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <%= pie_chart Visit.group(:office_id).count, 
              title: 'Los 3 pisos mas visitados',
              xtitle: 'piso',
              ytitle: 'piso',
              library: {
                legend: {
                  labelFormat: '{name} : {y} ({percentage}%)'
                }
              }
        %>
      </div>
    </div>

    <div class="col-6">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <%= pie_chart Visit.group(:office_id).count, 
              title: 'Los 3 pisos mas visitados',
              library: {
                legend: {
                  labelFormat: '{name} : {y} ({percentage}%)'
                }
              }
        %>
      </div>
    </div>
  </div>
</div>

